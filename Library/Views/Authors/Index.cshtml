@{
  Layout = "_Layout";
}

@using Library.Models

<div class="container">
  <h1>Authors</h1>
  
  @if (Model.Count == 0)
  {
    <h2>You haven't added any Authors. Click @Html.ActionLink("here", "Create") to add an Author.</h2>
  }
  
  <ul>
    @foreach (Author author in Model)
    {
      <li>@Html.ActionLink($"{author.AuthorName}", "Details", new { id = author.AuthorId })</li>
    }
  </ul>
  
  @if(Model.Count != 0)
  {
    <p>@Html.ActionLink("Add Another Author", "Create")</p>
  }
  
  <p>@Html.ActionLink("See all Books", "Index", "Books")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>
