@{
  Layout = "_Layout";
}

@using Library.Models;

<h1>Books </h1>

@if (@Model.Count == 0)
{
  <h3>No books have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Book thisBook in Model)
    {
      <li>@Html.ActionLink($"{thisBook.BookName}", "Details", new { id = thisBook.BookId }) | @thisBook.Catalog.CatalogName</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new item", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>