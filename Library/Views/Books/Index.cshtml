@{
  Layout = "_Layout";
}

@using Library.Models;

<h1>Books for @User.Identity.Name</h1>

@if (@Model.Count == 0)
{
  <h3>No books have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Book thisBook in Model)
    {
      <li>@Html.ActionLink($"{thisBook.BookName}", "Details", new { id = thisBook.BookId }) | @thisBook.Catalog.CatalogName </li> //Need to have a function that adds the authors as well, Figure that out in a sec
    }
  </ul>
}

<p>@Html.ActionLink("Add new Book", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>